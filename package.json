{
  "name": "green-power",
  "private": true,
  "scripts": {
    "dev": "pnpm -C apps/api dev & pnpm -C apps/web dev",
    "dev:api": "pnpm -C apps/api dev",
    "dev:web": "pnpm -C apps/web dev",
    "build": "pnpm -C apps/api build && pnpm -C apps/web build",
    "lint": "pnpm -C apps/web lint",
    "db:migrate": "pnpm -C apps/api prisma:migrate",
    "db:generate": "pnpm -C apps/api prisma:generate",
    "db:seed": "pnpm -C apps/api prisma:seed",
    "db:studio": "pnpm -C apps/api prisma:studio"
  },
  "devDependencies": {
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.0.0"
}

